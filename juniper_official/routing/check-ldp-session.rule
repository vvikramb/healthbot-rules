/*
 * Monitors LDP session state and notifies anomalies when session state is not operational.
 *
 */
 healthbot {
    topic routing.mpls {
        rule check-ldp-session {
            keys lsr-id;
            synopsis "LDP state analyzer";
            description "Collects LDP stats periodically and notifies when LDP session goes down";
            sensor ldp-oc {
                open-config {
                    sensor-name /network-instances/network-instance/mpls/signaling-protocols/ldp/neighbors;
                    frequency 60s;
                }
            }
            field lsr-id {
                sensor ldp-oc {
                    path /network-instances/network-instance/mpls/signaling-protocols/ldp/neighbors/neighbor/state/lsr-id;
                    where "/network-instances/network-instance/mpls/signaling-protocols/ldp/neighbors/neighbor/state/lsr-id =~ /{{input-lsr-id}}/";
                }
                type string;
                description "LSR id to be monitored";
            }
            field session-state {
                sensor ldp-oc {
                    path /network-instances/network-instance/mpls/signaling-protocols/ldp/neighbors/neighbor/state/session-state;
                }
                type string;
                description "LDP session state";
                enumerate __default__ as -99;
                enumerate NON_EXISTENT as -26;
                enumerate Nonexistent as -25;				
                enumerate Connecting as -20;
                enumerate Initialized as -15;
                enumerate OpenRec as -10;
                enumerate OpenSent as -5;
                enumerate Closing as 0;				
                enumerate OPERATIONAL as 1;				
            }
            /*
             * Anomaly detection logic.
             */
            trigger ldp-session-state {
                alert-type routing.mpls.ldp.state.ldp-session-state;
                frequency 1offset;
                /*
                 * Sets color to green when the session state is operational.
                 */
                term session-up {
                    when {
                        matches-with "$session-state" OPERATIONAL {
                            ignore-case;
                        }
                    }
                    then {
                        status {
                            color green;
                            message "LDP session $lsr-id state is $session-state";
                        }
                    }
                }				
                /*
                 * Sets color to red when ldp session state is not operational.
                 */
                term is-session-down {
                    when {
                        does-not-match-with "$session-state" OPERATIONAL {
                            ignore-case;
                        }
                    }
                    then {
                        status {
                            color red;
                            message "LDP session $lsr-id state is $session-state";
                        }
                    }
                }
            }
            variable input-lsr-id {
                value .*;
                description "Input LSR ID to monitor, regular expression, eg '192.168.1.1*'";
                type string;
            }
        	rule-properties {
                version 1;
                contributor juniper;
                category advanced;
                is-scaling-rule {
                    description "Fields:te-interface ; Directly impacted by number of te-interfaces running in each network device";
                }
                supported-healthbot-version 2.1.0;
                supported-devices {
                    juniper {
                        operating-system junos {
                            products MX {
                                platforms MX2010 {
                                    releases 17.4R1 {
                                        release-support min-supported-release;
                                    }
                                }
                                platforms MX2020 {
                                    releases 17.4R1 {
                                        release-support min-supported-release;
                                    }
                                }
                                platforms MX240 {
                                    releases 17.4R1 {
                                        release-support min-supported-release;
                                    }
                                }
                                platforms MX480 {
                                    releases 17.4R1 {
                                        release-support min-supported-release;
                                    }
                                }
                                platforms MX960 {
                                    releases 17.4R1 {
                                        release-support min-supported-release;
                                    }
                                }
                            }
                            products PTX {
                                platforms PTX1000 {
                                    releases 17.4R1 {
                                        release-support min-supported-release;
                                    }
                                }
                                platforms PTX10000 {
                                    releases 17.4R1 {
                                        release-support min-supported-release;
                                    }
                                }
                                platforms PTX5000 {
                                    releases 17.4R1 {
                                        release-support min-supported-release;
                                    }
                                }
                            }
                            products QFX {
                                platforms QFX10000 {
                                    releases 17.4R1 {
                                        release-support min-supported-release;
                                    }
                                }
                                platforms QFX5200 {
                                    releases 17.4R1 {
                                        release-support min-supported-release;
                                    }
                                }
                            }
                            products EX {
                                platforms EX9204 {
                                    releases 24.2 {
                                        release-support min-supported-release;
                                    }
                                }
                                platforms EX9208 {
